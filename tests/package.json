    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa__router": "^12.0.0",
    "@types/method-override": "0.0.32",
    "@types/mocha": "^10.0.1",
    "@types/multer": "1.4.7",
    "@types/node": "^16.18.23",
    "@types/promise.any": "^2.0.0",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.57.0",
