{
  "name": "tsoa",
  "description": "Build swagger-compliant REST APIs using TypeScript and Node",
  "version": "0.0.24",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "clean": "rimraf dist && rimraf test/fixtures/routes.ts",
    "lint": "tslint ./src/**/*.ts",
    "prepublish": "npm run typings install && npm run build",
    "test": "npm run swagger-gen && mocha **/*.spec.ts --require ts-node/register",
    "typings": "typings",
    "swagger-gen": "ts-node ./src/cli.ts --entryFile=./tests/fixtures/server.ts --swaggerDir=./dist --routesDir=./tests/fixtures"
  },
  "author": "Luke Autry <lukeautry@gmail.com> (http://www.lukeautry.com)",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^1.2.1",
    "express": "^4.13.4",
    "handlebars": "^4.0.5",
    "typescript": "^1.8.10",
    "typescript-formatter": "^2.2.0",
    "yargs": "^4.7.1"
  },
  "devDependencies": {
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "method-override": "^2.3.6",
    "mocha": "^2.5.3",
    "rimraf": "^2.5.2",
    "supertest": "^1.2.0",
    "ts-node": "^0.9.3",
    "tslint": "^3.11.0",
    "typings": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeautry/tsoa.git"
  },
  "bin": {
    "swagger-ts-generate": "dist/cli.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
