{
  "name": "@tsoa/cli",
  "description": "Build swagger-compliant REST APIs using TypeScript and Node",
  "version": "6.0.1",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "openapi",
    "swagger",
    "server",
    "node",
    "node.js",
    "codegen",
    "generation",
    "express",
    "hapi.js",
    "koa"
  ],
  "scripts": {
    "build": "yarn clean && yarn tsc && yarn copy-templates",
    "copy-templates": "copyfiles -u 1 ./src/routeGeneration/templates/**/* ./dist",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "tsc": "tsc -b",
    "watch": "tsc -b -w"
  },
  "author": "Luke Autry <lukeautry@gmail.com> (http://www.lukeautry.com)",
  "license": "MIT",
  "dependencies": {
    "@tsoa/runtime": "^6.0.0",
    "@types/multer": "^1.4.11",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "merge-anything": "^5.1.4",
    "minimatch": "^9.0.1",
    "typescript": "^5.3.3",
    "validator": "^13.11.0",
    "yamljs": "^0.3.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.0",
    "@types/node": "^18.0.0",
    "@types/validator": "^13.11.7",
    "@types/yamljs": "^0.2.34",
    "@types/yargs": "^17.0.32",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeautry/tsoa.git"
  },
  "bin": {
    "tsoa": "dist/cli.js"
  },
  "engines": {
    "yarn": ">=1.9.4",
    "node": ">=18.0.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  }
}
